<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".TombActivity"
    android:background="@drawable/tomb_fon">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/center"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutTop">

        <TextView
            android:layout_width="330dp"
            android:layout_height="61dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/find_treasures"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15dp"
            android:id="@+id/txt_hint"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/titul"
            android:layout_marginRight="79dp"
            android:layout_marginEnd="79dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/topCenter"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutTopLeft"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/topCenter"
            android:layout_toStartOf="@+id/topCenter">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/topLeftCenter"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/topLeftCenter"
                android:layout_toLeftOf="@+id/topLeftCenter"
                android:layout_toStartOf="@+id/topLeftCenter"
                android:id="@+id/layoutOne">



                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/circle"
                    android:background="#00ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/imageView" />

                <TextView
                    android:id="@+id/txt_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#eaeaea"
                    android:textSize="26dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/layoutOne"
                android:layout_toRightOf="@+id/layoutOne"
                android:layout_toEndOf="@+id/layoutOne"
                android:id="@+id/layoutTwo"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/topLeftCenter"
                android:layout_alignRight="@+id/topLeftCenter"
                android:layout_alignEnd="@+id/topLeftCenter"
                android:id="@+id/layoutFive">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btnTreasure_2"
                    android:background="#00ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/layoutFive"
                android:layout_below="@+id/topLeftCenter"
                android:layout_toRightOf="@+id/layoutFive"
                android:id="@+id/layoutSix"></RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layoutTopLeft"
            android:layout_toEndOf="@+id/layoutTopLeft"
            android:id="@+id/layoutTopRight">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/topRightCenter"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/topRightCenter"
                android:layout_toLeftOf="@+id/topRightCenter"
                android:layout_toStartOf="@+id/topRightCenter"
                android:id="@+id/layoutThree"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/topRightCenter"
                android:layout_toRightOf="@+id/layoutThree"
                android:layout_toEndOf="@+id/layoutThree"
                android:id="@+id/layoutFour">

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_marginLeft="72dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:background="@android:color/transparent"
                    android:text="0 %"
                    android:textColor="@color/teal_200"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/circle"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:textAlignment="center" />


                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnTreasure_4"
                    android:layout_centerVertical="true"
                    android:background="#00FFFFFF" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/topRightCenter"
                android:layout_alignRight="@+id/layoutThree"
                android:layout_alignEnd="@+id/layoutThree"
                android:id="@+id/layoutSeven"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/topRightCenter"
                android:layout_alignTop="@+id/topRightCenter"
                android:layout_toRightOf="@+id/topRightCenter"
                android:id="@+id/layoutEight">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/btnTreasure_1"
                    android:background="#00ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/center"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutBot">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bottomCenter"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/bottomCenter"
            android:layout_alignStart="@+id/bottomCenter"
            android:id="@+id/layoutBotRight">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/botRightCenter"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/botRightCenter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/botRightCenter"
                android:layout_alignEnd="@+id/botRightCenter"
                android:id="@+id/layoutEleven"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/botRightCenter"
                android:layout_toRightOf="@+id/layoutEleven"
                android:layout_toEndOf="@+id/layoutEleven"
                android:id="@+id/layoutTwelve"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/layoutEleven"
                android:layout_alignEnd="@+id/layoutEleven"
                android:layout_below="@+id/layoutEleven"
                android:id="@+id/layoutFifteen">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnTreasure_3"
                    android:background="#00ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/layoutFifteen"
                android:layout_toEndOf="@+id/layoutFifteen"
                android:layout_toRightOf="@+id/layoutFifteen"
                android:layout_below="@+id/botRightCenter"
                android:layout_alignLeft="@+id/botRightCenter"
                android:layout_alignStart="@+id/botRightCenter"
                android:id="@+id/layoutSixteen">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnTreasure_5"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#00FFFFFF"
                    android:layout_below="@+id/sixteenCenter"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/sixteenCenter"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/center"
        android:id="@+id/layoutBotLeft"
        android:layout_alignTop="@+id/layoutBot"
        android:layout_toLeftOf="@+id/center">



        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botLeftCenter"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:singleLine="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/botLeftCenter"
            android:layout_toStartOf="@+id/botLeftCenter"
            android:layout_above="@+id/botLeftCenter"
            android:id="@+id/layoutNine">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTreasure_6"
                android:background="#00FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/botLeftCenter"
            android:layout_toRightOf="@+id/layoutNine"
            android:layout_toEndOf="@+id/layoutNine"
            android:id="@+id/layoutTen"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layoutNine"
            android:layout_alignRight="@+id/botLeftCenter"
            android:layout_alignEnd="@+id/botLeftCenter"
            android:id="@+id/layoutThirteen"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutFourteen"
            android:layout_below="@+id/botLeftCenter"
            android:layout_toRightOf="@+id/layoutThirteen"
            android:layout_toEndOf="@+id/layoutThirteen"></RelativeLayout>

    </RelativeLayout>
</RelativeLayout>